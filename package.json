{
  "name": "nodejs-crud-api",
  "version": "0.1.0",
  "description": "Simple CRUD API using in-memory database underneath",
  "type": "module",
  "main": "index.ts",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=development nodemon",
    "start:prod": "cross-env NODE_OPTIONS=\"--loader ts-node/esm\" NODE_NO_WARNINGS=1 npx webpack --config webpack.config.ts --mode production && node dist/bundle.js",
    "start:multi": "node cluster.js",
    "test": "mocha",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sanhe/nodejs-crud-api.git"
  },
  "author": "Shautsou",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sanhe/nodejs-crud-api/issues"
  },
  "homepage": "https://github.com/Sanhe/nodejs-crud-api#readme",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "chai": "^4.3.7",
    "eslint": "^8.30.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1",
    "sinon": "^15.0.1",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "uuid": "^9.0.0"
  }
}
